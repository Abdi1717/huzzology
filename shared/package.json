{
  "name": "@huzzology/shared",
  "version": "1.0.0",
  "private": true,
  "description": "Shared types and utilities for Huzzology",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
