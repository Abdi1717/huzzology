  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.14.0",
    "typescript": "^5.2.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
